<?xml version="1.0"?>

<registration>

	<tool
			id="rsn.linktool.pentaho"
			title="Pentaho Reports"
			description="This will link your site to the Pentaho Reporting Engine">

      <!-- put the url in the sakai.properties... should be like:
      rsn.linktool.pentaho.url=http://localhost:8080/pentaho/j_spring_linktool_security_check
      -->
      <configuration name="urlProp" value="rsn.linktool.pentaho.url" />
      <configuration name="trustedService" value="true" />
		<configuration name="height" value="750px" />

		<keyword name="linktool" />

      <category name="aw"/>
      <category name="myworkspacetadmin"/>
      <category name="portfolio"/>
      <category name="course"/>
      <category name="project"/>
	</tool>

</registration>
